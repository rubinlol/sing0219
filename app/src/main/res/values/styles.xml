<resources>

    <!-- 使用style方式定义activity切换动画 -->
    <style name="activityAnim">
        <item name="android:activityOpenEnterAnimation">@anim/slide_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_from_right</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

   <style name="KaleTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
