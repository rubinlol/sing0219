<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="4dp"/>
            <solid android:color="#FFF2F2F2" />
            <stroke android:color="@color/C8" />
        </shape>
    </item>
    <item
        android:top="1px"
        android:bottom="1px"
        android:left="0px"
        android:right="0px">
        <shape>
            <corners android:radius="4dp"/>
            <solid android:color="@color/C10" />
            <stroke android:width="0px"
                android:color="@color/C8" />
        </shape>
    </item>
</selector>