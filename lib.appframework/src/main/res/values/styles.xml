<resources>
    <style name="SwipeBackLayout">
        <item name="edge_size">20dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="Animations" />
    <style name="Animations.Empty_Duration_200">
        <item name="android:windowEnterAnimation">@anim/anim_do_nothing_duraiton_200</item>
        <item name="android:windowExitAnimation">@anim/anim_do_nothing_duraiton_200</item>
    </style>

    <style name="DialogBaseTheme" parent="android:Theme.Holo.Panel"></style>
    <style name="DialogTheme" parent="DialogBaseTheme">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="ui_button_fillparent">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/buttonF_height</item>
        <item name="android:textSize">@dimen/T2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/C10</item>
        <item name="android:background">@drawable/common_btn_primary</item>
    </style>
    <!-- 通栏按钮样式 -->
    <style name="ui_button_primary_fillparent">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/buttonF_height</item>
        <item name="android:textSize">@dimen/T3</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/common_btn_primary</item>
        <item name="android:background">@drawable/common_btn_primary</item>
    </style>
    <!-- 通用实心按钮 -->
    <style name="ui_button_primary">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_width">@dimen/buttonS_width</item>
        <item name="android:layout_height">@dimen/buttonS_height</item>
        <item name="android:textSize">@dimen/T3</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/common_btn_primary</item>
        <item name="android:background">@drawable/common_btn_primary</item>
    </style>

    <!-- 通用实心按钮 -->
    <style name="ui_button_grey">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">@dimen/T3</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/common_btn_grey</item>
        <item name="android:background">@drawable/common_btn_grey</item>
    </style>

    <!-- 线框按钮 -->
    <style name="ui_button_default">
        <!--内文字垂直水平居中-->
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_width">@dimen/buttonS_width</item>
        <item name="android:layout_height">@dimen/buttonS_height</item>
        <item name="android:textSize">@dimen/T3</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/common_btn_default</item>
        <item name="android:background">@drawable/common_btn_default</item>
    </style>

</resources>
