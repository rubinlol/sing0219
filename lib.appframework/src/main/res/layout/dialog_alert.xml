<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_bg"
    android:orientation="vertical"
    android:padding="@dimen/D0">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/CT1"
            android:textSize="@dimen/T2"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/D0"
        android:layout_marginTop="@dimen/D2"
        android:textColor="@color/CT8"
        android:textSize="@dimen/T2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_positive"
            style="@style/ui_button_primary"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_neutral"
            style="@style/ui_button_grey"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="@dimen/T3"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_nagative"
            style="@style/ui_button_grey"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="@dimen/T3"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>
